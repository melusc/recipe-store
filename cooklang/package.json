{
	"type": "module",
	"name": "cooklang",
	"private": true,
	"exports": {
		".": "./dist/src/index.js",
		"./wasm": "./dist/wasm/cooklang_wasm.cjs"
	},
	"imports": {
		"#wasm": "./dist/wasm/cooklang_wasm.cjs"
	},
	"engines": {
		"node": "^24.13.1"
	},
	"scripts": {
		"build": "pnpm clean && pnpm build:wasm && tsc",
		"build:wasm": "wasm-pack build --release --no-pack --target nodejs --out-dir dist/wasm && pnpm postbuild:wasm",
		"postbuild:wasm": "node scripts/postbuild-wasm.ts",
		"clean": "rimraf dist",
		"fmt": "cargo fmt && eslint --fix",
		"test": "vitest run"
	},
	"license": "MIT",
	"devDependencies": {
		"@lusc/eslint-config": "^9.0.0",
		"@lusc/tsconfig": "^7.2.0",
		"@types/node": "^24.10.13",
		"eslint": "^10.0.0",
		"rimraf": "^6.1.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18",
		"wasm-pack": "^0.14.0"
	},
	"dependencies": {
		"zod": "^4.3.6"
	}
}
