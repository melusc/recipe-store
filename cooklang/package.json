{
	"type": "module",
	"name": "cooklang",
	"private": true,
	"exports": {
		".": "./dist/src/index.js",
		"./wasm": "./dist/wasm/cooklang_wasm.cjs"
	},
	"imports": {
		"#wasm": "./dist/wasm/cooklang_wasm.cjs"
	},
	"engines": {
		"node": "^24.7.0"
	},
	"scripts": {
		"build": "yarn clean && yarn build:wasm && tsc",
		"build:wasm": "wasm-pack build --release --no-pack --target nodejs --out-dir dist/wasm && yarn postbuild:wasm",
		"postbuild:wasm": "node scripts/postbuild-wasm.ts",
		"clean": "rimraf dist",
		"fmt": "cargo fmt && eslint --fix",
		"test": "vitest run"
	},
	"license": "MIT",
	"devDependencies": {
		"@lusc/eslint-config": "^7.4.2",
		"@lusc/tsconfig": "^7.1.0",
		"@types/node": "^22.18.0",
		"eslint": "^9.34.0",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"wasm-pack": "^0.13.1"
	},
	"dependencies": {
		"zod": "^4.1.5"
	}
}
