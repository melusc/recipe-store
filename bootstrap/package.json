{
	"type": "module",
	"name": "bootstrap-slim",
	"private": true,
	"devDependencies": {
		"csso-cli": "^4.0.2",
		"esbuild": "^0.25.1",
		"sass": "^1.86.0"
	},
	"engines": {
		"node": ">=22.14.0"
	},
	"exports": {
		".": "./dist"
	},
	"scripts": {
		"build:js": "esbuild --outdir=dist --format=esm --platform=node --bundle --sourcemap --packages=bundle --minify src/bootstrap.ts",
		"scss": "sass src/bootstrap.scss dist/bootstrap.css",
		"csso": "csso -i dist/bootstrap.css -o dist/bootstrap.min.css -s file",
		"build:css": "node --run scss && node --run csso",
		"build": "node --run build:js && node --run build:css"
	},
	"license": "GPL-3.0-only"
}
